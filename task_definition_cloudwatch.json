[
  {
    "essential": true,
    "image": "${ecr_image_url}",
    "name": "${name}",
    "portMappings": [
      {
        "containerPort": ${port},
      "hostPort": ${port}
    }
    ],
    "logConfiguration": {
      "logDriver" : "awslogs",
      "options" : {
        "awslogs-region" : "${region}",
        "awslogs-group" : "${name}",
        "awslogs-stream-prefix" : "${prefix_logs}"
      }
    },
    "secrets": [
      {
        "name": "${secrets_name}",
        "valueFrom": "${secrets_value_arn}"
      }
    ],
    "environment": [
      {
        "name": "APP",
        "value": "${name}"
      },
      {
        "name": "NEW_RELIC_APP_NAME",
        "value": "${name}"
      }
    ]
  }
]