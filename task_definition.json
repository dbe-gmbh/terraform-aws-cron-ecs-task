[
  {
    "essential": true,
    "image": "906394416424.dkr.ecr.us-east-1.amazonaws.com/aws-for-fluent-bit:latest",
    "name": "log_router",
    "firelensConfiguration": {
      "type": "fluentbit",
      "options": {
        "config-file-type": "file",
        "config-file-value": "/fluent-bit/configs/parse-json.conf"
      }
    },
    "memoryReservation": 50
  },
  {
    "image": "${repo_url}",
    "name": "${app}",
    "portMappings": [
      {
        "containerPort": ${listen_port},
        "hostPort": ${listen_port}
      }
    ],
    "logConfiguration": {
      "logDriver":"awsfirelens",
      "options": {
        "Name": "es",
        "Host": "${es_url}",
        "Port": "443",
        "Index": "${app}",
        "Type": "${app}_type",
        "Aws_Auth": "On",
        "Aws_Region": "${region}",
        "tls": "On"
      }
    },
    "secrets": [
      {
        "name": "${secret_name}",
        "valueFrom": "${secret_value_arn}"
      }
    ],
    "environment": [
      {
        "name": "APP",
        "value": "${app}"
      }
    ]
  }
]
